# Database Configuration (Supabase - Connection Pooler)
DATABASE_URL=postgresql+asyncpg://postgres.PROJECT_REF:YOUR_PASSWORD@aws-1-ap-southeast-2.pooler.supabase.com:5432/postgres
DATABASE_SYNC_URL=postgresql://postgres.PROJECT_REF:YOUR_PASSWORD@aws-1-ap-southeast-2.pooler.supabase.com:5432/postgres

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15

# AI Service Configuration (OpenAI veya ba≈üka bir servis)
AI_SERVICE_URL=https://api.openai.com/v1
AI_API_KEY=your-ai-api-key

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB

# Supabase Storage (for images)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_BUCKET=complaints

# Application Settings
DEBUG=True
ENVIRONMENT=development

# CORS Origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Bursa City Boundaries (approximate)
CITY_CENTER_LAT=40.1885
CITY_CENTER_LON=29.0610
CITY_RADIUS_KM=30

